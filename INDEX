        }

        .logo { font-size: 1.5rem; font-weight: bold; color: var(--primary-blue); }

        .hero {
            background: linear-gradient(rgba(0, 86, 179, 0.7), rgba(0, 86, 179, 0.7)), 
                        url('https://images.unsplash.com/photo-1530541930197-ff16ac917b0e?auto=format&fit=crop&w=1350&q=80');
            background-size: cover; height: 30vh; display: flex; flex-direction: column; justify-content: center; align-items: center; color: white; text-align: center;
        }

        .section { padding: 40px 5%; text-align: center; }
        .auth-container { max-width: 800px; margin: 0 auto; background: var(--light-gray); padding: 30px; border-radius: 15px; text-align: left; box-shadow: 0 5px 15px rgba(0,0,0,0.05); }
        
        .form-group { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; font-weight: bold; }
